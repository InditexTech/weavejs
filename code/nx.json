{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"]
    },
    "check": {
      "dependsOn": ["^check"],
      "cache": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": true
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "cache": true
    },
    "publish:snapshot": {
      "dependsOn": ["^publish:snapshot"],
      "cache": true
    },
    "release:prepare": {
      "dependsOn": ["^release:prepare"],
      "cache": true
    },
    "release:perform": {
      "dependsOn": ["^release:perform"],
      "cache": true
    },
    "verify": {
      "dependsOn": ["^verify"],
      "cache": true
    }
  },
  "defaultBase": "main",
  "release": {
    "changelog": {
      "projectChangelogs": {
        "renderOptions": {
          "authors": true,
          "commitReferences": true,
          "versionTitleDate": true
        }
      },
      "workspaceChangelog": {
        "renderOptions": {
          "authors": true,
          "commitReferences": true,
          "versionTitleDate": true
        }
      },
      "automaticFromRef": true
    }
  }
}