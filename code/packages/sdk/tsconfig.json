{
  "strict": true,
  "compilerOptions": {
    "target": "es2023",
    "lib": ["es2023", "DOM", "DOM.Iterable"],
    "moduleDetection": "force",
    "module": "preserve",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true,
    "declarationMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types",
      "./src/nodes/extensions.ts",
      "./src/types/index.d.ts"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noUnusedLocals": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedDeclarations": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/**/*.json", "src/types", "package.json", "tests"]
}
