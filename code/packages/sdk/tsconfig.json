{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2023", "DOM", "DOM.Iterable"],
    "moduleDetection": "force",
    "module": "preserve",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true,
    "typeRoots": ["./src/types"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@syncedstore/core/types/doc": [
        "./../../node_modules/@syncedstore/core/types/doc"
      ]
    },
    "noUnusedLocals": true,
    "declaration": true,
    "isolatedDeclarations": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/**/*.json", "package.json", "src/.ts", "tests"]
}
