{
  "env": {
    "es2022": true,
    "browser": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react-hooks"],
  "globals": {
    "JSX": "readonly",
    "window": "readonly",
    "document": "readonly"
  },
  "rules": {
    "@typescript-eslint/no-explicit-any": "warn"
  }
}
