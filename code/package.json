{
  "name": "@inditextech/weavejs",
  "version": "0.1.0-SNAPSHOT",
  "description": "Weave.js framework",
  "private": true,
  "packageManager": "npm@10.2.4",
  "workspaces": [
    "packages/*"
  ],
  "main": "index.js",
  "scripts": {
    "build": "nx run-many -t build",
    "bump:snapshot": "npm ci && lerna version --no-git-tag-version --no-push --force-publish --yes $npm_package_version.$(date \"+%s\")",
    "check": "nx run-many -t check",
    "cleanup": "rm package-lock.json && npkill -D -y",
    "dist:tag": "nx run-many -t dist:tag",
    "git:commit-msg": "commitlint -e",
    "git:pre-commit": "npm run lint",
    "git:pre-push": "npm run build && npm run test",
    "link": "nx run-many -t link",
    "lint": "nx run-many -t lint",
    "lint:fix": "nx run-many -t lint:fix",
    "package": "nx run-many -t package",
    "postinstall": "patch-package",
    "prepare": "cd ../ && node code/.husky/install.mjs",
    "publish:snapshot": "nx run-many -t publish:snapshot -- --verbose --tag next --registry $NPM_PUBLISHING_REGISTRY --unsafe-perm",
    "release:perform": "nx run-many -t release:perform -- --verbose --registry $NPM_PUBLISHING_REGISTRY --unsafe-perm",
    "release:prepare": "nx run-many -t release:prepare",
    "release": "nx run-many -t release",
    "reset": "nx reset",
    "test": "nx run-many -t test",
    "verify": "npm ci && nx run-many -t verify",
    "version:development": "export BUMP_DEVELOP_VERSION=$(npm version $(npm version minor)-SNAPSHOT) && lerna version $BUMP_DEVELOP_VERSION --no-git-tag-version --no-push --force-publish --exact --yes && npm version $(npm version minor)-SNAPSHOT",
    "version:release": "npm ci && lerna version --no-git-tag-version --no-push --force-publish --exact --yes $RELEASE_VERSION && npm version $RELEASE_VERSION"
  },
  "keywords": [
    "weave",
    "weave.js",
    "collab",
    "collaboration",
    "canvas",
    "framework",
    "sdk",
    "react",
    "yjs",
    "sync"
  ],
  "license": "UNLICENSED",
  "devDependencies": {
    "@commitlint/cli": "19.4.0",
    "@commitlint/config-conventional": "19.2.2",
    "husky": "9.1.4",
    "lerna": "8.1.8",
    "npkill": "0.12.2",
    "nx": "19.5.7",
    "patch-package": "^8.0.0",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": ">= 20.11.x",
    "npm": ">= 10.2.x"
  }
}
